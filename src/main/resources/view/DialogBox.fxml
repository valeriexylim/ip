<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="charli.util.DialogBox" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="TOP_LEFT">
    <children>
        <VBox fx:id="avatarContainer" alignment="CENTER" spacing="5">
            <ImageView fx:id="displayPicture" fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true"/>
        </VBox>
        <Label fx:id="dialog" wrapText="true" maxWidth="250"/>
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</fx:root>